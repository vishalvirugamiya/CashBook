<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CashBook" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">#4CC9FE</item>
        <item name="colorPrimaryDark">#1C82D5</item>
        <item name="android:navigationBarColor">#D0000000</item>
    </style>

    <style name="ChipCustomStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">#000fff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="chipCornerRadius">5dp</item>
    </style>

    <style name="Theme.CashBook" parent="Base.Theme.CashBook" />


    <style name="WeekDayStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="DayCellStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>